import Layout from '../layouts/Layout.astro';
import { getRaceResults, getQualifyingResults, getPracticeResults, getSprintResults, getSessionData } from '../lib/api';

// Get the year, round, and session from URL params
const url = new URL(Astro.request.url);
const yearParam = url.searchParams.get('year');
const roundParam = url.searchParams.get('round');
const session = url.searchParams.get('session') || 'race';

if (!yearParam || !roundParam) {
  return Astro.redirect('/schedule');
}

const year = parseInt(yearParam);
const round = parseInt(roundParam);

// Trigger background loading of FastF1 data (fire and forget)
fetch(`http://localhost:8000/fastf1/preload/${year}/${round}`, { method: 'POST' }).catch(() => {});

// Fetch race metadata (always needed for page title)
const raceData = await getRaceResults(year, round);
const { race, results } = raceData;

// Fetch session-specific data
let qualifyingData: any = null;
let practiceData: any = null;
let sprintData: any = null;
let sessionData: any = null;

// Always check for sprint data to determine if it's a sprint weekend
try {
  sprintData = await getSprintResults(year, round);
} catch (e) {
  // Sprint data not available - normal weekend
}

// Determine if this is a sprint weekend
const isSprintWeekend = sprintData && sprintData.results && sprintData.results.length > 0;

if (session === 'qualifying' || session === 'sprint-qualifying') {
  try {
    qualifyingData = await getQualifyingResults(year, round);
  } catch (e) {
    console.error('Error fetching qualifying data:', e);
  }
} else if (session === 'practice') {
  try {
    practiceData = await getPracticeResults(year, round);
  } catch (e) {
    console.error('Error fetching practice data:', e);
  }
} else if (session === 'data') {
  try {
    sessionData = await getSessionData(year, round, 'R');
  } catch (e) {
    console.error('Error fetching session data:', e);
  }
}

// Define available tabs dynamically based on weekend format
const tabs = [
  { id: 'race', label: 'Race', icon: 'üèÅ' },
  ...(isSprintWeekend
    ? [
        { id: 'sprint-qualifying', label: 'Sprint Qualifying', icon: 'üèÉ' },
        { id: 'sprint', label: 'Sprint', icon: '‚ö°' },
        { id: 'qualifying', label: 'Qualifying', icon: '‚è±Ô∏è' },
      ]
    : [
        { id: 'qualifying', label: 'Qualifying', icon: '‚è±Ô∏è' },
      ]
  ),
  { id: 'practice', label: 'Practice', icon: 'üîß' },
  { id: 'data', label: 'Data', icon: 'üìä' },
];

// Process qualifying data into combined results
let qualifyingCombinedResults: any[] = [];
if (qualifyingData) {
  // Add Q3 drivers (positions 1-10)
  if (qualifyingData.q3) {
    qualifyingData.q3.forEach((q3Result: any) => {
      const q2Result = qualifyingData.q2?.find((r: any) => r.driver === q3Result.driver);
      const q1Result = qualifyingData.q1?.find((r: any) => r.driver === q3Result.driver);
      qualifyingCombinedResults.push({
        driver: q3Result.driver,
        driver_number: q3Result.driver_number,
        driver_id: q3Result.driver_id,
        team: q3Result.team,
        team_color: q3Result.team_color,
        q1_time: q1Result?.lap_time || '-',
        q2_time: q2Result?.lap_time || '-',
        q3_time: q3Result.lap_time || '-'
      });
    });
  }

  // Add Q2 drivers who didn't make Q3 (positions 11-15)
  if (qualifyingData.q2) {
    const q3Drivers = new Set(qualifyingData.q3?.map((r: any) => r.driver) || []);
    qualifyingData.q2.filter((q2Result: any) => !q3Drivers.has(q2Result.driver)).forEach((q2Result: any) => {
      const q1Result = qualifyingData.q1?.find((r: any) => r.driver === q2Result.driver);
      qualifyingCombinedResults.push({
        driver: q2Result.driver,
        driver_number: q2Result.driver_number,
        driver_id: q2Result.driver_id,
        team: q2Result.team,
        team_color: q2Result.team_color,
        q1_time: q1Result?.lap_time || '-',
        q2_time: q2Result.lap_time || '-',
        q3_time: '-'
      });
    });
  }

  // Add Q1 drivers who didn't make Q2 (positions 16-20)
  if (qualifyingData.q1) {
    const q2Drivers = new Set(qualifyingData.q2?.map((r: any) => r.driver) || []);
    qualifyingData.q1.filter((q1Result: any) => !q2Drivers.has(q1Result.driver)).forEach((q1Result: any) => {
      qualifyingCombinedResults.push({
        driver: q1Result.driver,
        driver_number: q1Result.driver_number,
        driver_id: q1Result.driver_id,
        team: q1Result.team,
        team_color: q1Result.team_color,
        q1_time: q1Result.lap_time || '-',
        q2_time: '-',
        q3_time: '-'
      });
    });
  }
}

// Process practice data into combined results
let practiceCombinedResults: any[] = [];
if (practiceData) {
  const allDrivers = new Set<string>();

  ['fp1', 'fp2', 'fp3'].forEach((fp) => {
    practiceData[fp]?.forEach((result: any) => {
      allDrivers.add(result.driver);
    });
  });

  allDrivers.forEach((driverName) => {
    const fp1Result = practiceData.fp1?.find((r: any) => r.driver === driverName);
    const fp2Result = practiceData.fp2?.find((r: any) => r.driver === driverName);
    const fp3Result = practiceData.fp3?.find((r: any) => r.driver === driverName);

    const times = [fp1Result, fp2Result, fp3Result]
      .filter(r => r?.lap_time && r.lap_time !== '-')
      .map(r => r.lap_time);

    const bestTime = times.length > 0 ? times.sort()[0] : null;

    practiceCombinedResults.push({
      driver: driverName,
      driver_number: fp3Result?.driver_number || fp2Result?.driver_number || fp1Result?.driver_number,
      driver_id: fp3Result?.driver_id || fp2Result?.driver_id || fp1Result?.driver_id,
      team: fp3Result?.team || fp2Result?.team || fp1Result?.team,
      team_color: fp3Result?.team_color || fp2Result?.team_color || fp1Result?.team_color,
      fp1_time: fp1Result?.lap_time || '-',
      fp2_time: fp2Result?.lap_time || '-',
      fp3_time: fp3Result?.lap_time || '-',
      fp1_laps: fp1Result?.laps_completed || 0,
      fp2_laps: fp2Result?.laps_completed || 0,
      fp3_laps: fp3Result?.laps_completed || 0,
      bestTime: bestTime
    });
  });

  practiceCombinedResults.sort((a, b) => {
    if (!a.bestTime) return 1;
    if (!b.bestTime) return -1;
    return a.bestTime.localeCompare(b.bestTime);
  });
}
