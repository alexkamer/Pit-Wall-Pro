<script>
  // Practice table sorting functionality
  document.addEventListener('DOMContentLoaded', () => {
    const practiceTable = document.getElementById('practice-table');
    if (!practiceTable) return;

    const tbody = document.getElementById('practice-tbody');
    if (!tbody) return;

    const sortHeaders = practiceTable.querySelectorAll('th[data-sort]');
    let currentSort: string | null = null;
    let currentDirection: 'asc' | 'desc' = 'asc';

    function parseTime(timeStr: string): number {
      if (timeStr === '-') return Infinity;

      // Parse time format like "1:29.563" or "1:30.055"
      const parts = timeStr.split(':');
      if (parts.length !== 2) return Infinity;

      const minutes = parseInt(parts[0]);
      const seconds = parseFloat(parts[1]);

      return minutes * 60 + seconds;
    }

    function sortTable(column: string) {
      const rows = Array.from(tbody.querySelectorAll('tr'));

      // Toggle direction if clicking the same column
      if (currentSort === column) {
        currentDirection = currentDirection === 'asc' ? 'desc' : 'asc';
      } else {
        currentDirection = 'asc';
        currentSort = column;
      }

      // Sort rows
      rows.sort((a, b) => {
        const aTime = (a as HTMLElement).dataset[column] || '-';
        const bTime = (b as HTMLElement).dataset[column] || '-';

        const aValue = parseTime(aTime);
        const bValue = parseTime(bTime);

        return currentDirection === 'asc' ? aValue - bValue : bValue - aValue;
      });

      // Update position numbers
      rows.forEach((row, index) => {
        const posCell = row.querySelector('.position-cell');
        if (posCell) {
          posCell.textContent = (index + 1).toString();
        }
      });

      // Clear and re-append rows
      tbody.innerHTML = '';
      rows.forEach(row => tbody.appendChild(row));

      // Update sort indicators
      sortHeaders.forEach(header => {
        const indicator = header.querySelector('.sort-indicator');
        if (!indicator) return;

        if (header.getAttribute('data-sort') === column) {
          indicator.classList.remove('opacity-0');
          indicator.textContent = currentDirection === 'asc' ? '‚ñ≤' : '‚ñº';
        } else {
          indicator.classList.add('opacity-0');
        }
      });
    }

    // Add click handlers to sortable headers
    sortHeaders.forEach(header => {
      header.addEventListener('click', () => {
        const column = header.getAttribute('data-sort');
        if (column) {
          sortTable(column);
        }
      });
    });

    // Add hover tooltips for lap counts
    const timeCells = practiceTable.querySelectorAll('.practice-time-cell');
    let tooltip: HTMLElement | null = null;

    timeCells.forEach(cell => {
      cell.addEventListener('mouseenter', (e) => {
        const laps = (cell as HTMLElement).dataset.laps;
        const timeText = (cell as HTMLElement).textContent?.trim();

        // Only show tooltip if there's a valid time and lap count
        if (!laps || laps === '0' || timeText === '-') return;

        // Create tooltip
        tooltip = document.createElement('div');
        tooltip.className = 'practice-tooltip';
        tooltip.textContent = `${laps} laps`;
        document.body.appendChild(tooltip);

        // Position tooltip
        const rect = (cell as HTMLElement).getBoundingClientRect();
        tooltip.style.position = 'fixed';
        tooltip.style.left = `${rect.left + rect.width / 2}px`;
        tooltip.style.top = `${rect.top - 35}px`;
        tooltip.style.transform = 'translateX(-50%)';
        tooltip.style.backgroundColor = '#1f2937';
        tooltip.style.color = '#e5e7eb';
        tooltip.style.padding = '4px 8px';
        tooltip.style.borderRadius = '4px';
        tooltip.style.fontSize = '12px';
        tooltip.style.fontWeight = '500';
        tooltip.style.border = '1px solid #374151';
        tooltip.style.zIndex = '9999';
        tooltip.style.pointerEvents = 'none';
        tooltip.style.whiteSpace = 'nowrap';
      });

      cell.addEventListener('mouseleave', () => {
        if (tooltip) {
          tooltip.remove();
          tooltip = null;
        }
      });
    });
  });
</script>
