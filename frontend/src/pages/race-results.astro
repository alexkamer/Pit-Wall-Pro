      <p class="text-gray-500">Round {race.roundNumber} of {year}</p>
    </div>

    <!-- Tab Navigation -->
    <div class="mb-6 border-b border-gray-800">
      <nav class="flex gap-2 -mb-px overflow-x-auto">
        {tabs.map((tab) => {
          const isActive = session === tab.id;
          const baseClasses = "flex items-center gap-2 px-6 py-3 border-b-2 font-medium transition-colors whitespace-nowrap";
          const activeClasses = isActive
            ? "border-red-500 text-red-500"
            : "border-transparent text-gray-400 hover:text-gray-300 hover:border-gray-700";

          return (
            <a
              href={`/race-results?year=${year}&round=${round}&session=${tab.id}`}
              class={`${baseClasses} ${activeClasses}`}
            >
              <span>{tab.icon}</span>
              <span>{tab.label}</span>
            </a>
          );
        })}
